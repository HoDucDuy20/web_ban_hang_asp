@{
    ViewData["Title"] = "Minics";
    ViewData["SubPage"] = "";
}
<div class="container justify-content-center">
    <div class="col align-self-center p">
        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <label for="floatingInput">User Name</label>
                <input type="text" class="form-control" id="floatingInput" placeholder="" name="username">
            </div>
            <div class="form-floating mb-3">
                <label for="floatingPassword">Password</label>
                <input type="password" class="form-control" id="floatingPassword" minlength="6" placeholder="" name="password">
            </div>
            @*<div class="row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Example checkbox
                    </label>
                </div>
            </div>
        </div>*@
            <br />
            <div class="row justify-content-between">
                <div class="col-4">
                    <button type="submit" class="btn btn-primary mb-3">Login</button>
                </div>
                <div class="col-4 d-flex align-items-end flex-column">
                    <span>Do not have an account? </span> <a asp-action="Registration" class="text-primary">Registration now</a>
                </div>
            </div>
           
           
            @if (ViewBag.Result == false)
            {
                <div class="alert alert-danger m-auto" role="alert">Đăng nhập thất bại!</div>
            }
        </form>
    </div>
</div>

