@model _0306191405_HoDucDuy.Areas.Admin.Models.Account
@{
    ViewData["Title"] = "Minics";
    ViewData["SubPage"] = "";
}
<a asp-action="Info" class="m-2 pl-4"><strong><i class="fa fa-angle-left"></i> Back</strong></a>
<div class="container justify-content-center">
    <div class="col align-self-center p">
        <form asp-action="EditProfile" method="post">
            <div class="form-floating mb-3">
                <label for="floatingInput">Full Name</label>
                <input type="text" class="form-control" id="floatingInput" maxlength="30" placeholder="" name="FullName" value="@Model.FullName">
            </div>
            <div class="form-floating mb-3">
                <label for="floatingInput">Email</label>
                <input type="email" class="form-control" id="floatingInput" placeholder="" name="Email" value="@Model.Email">
            </div>
            <div class="form-floating mb-3">
                <label for="floatingPassword">Phone</label>
                <input type="text" class="form-control" id="floatingPassword" minlength="10" maxlength="12" placeholder="" name="Phone" value="@Model.Phone">
            </div>
            <div class="form-floating mb-3">
                <label for="floatingPassword">Address</label>
                <input type="text" class="form-control" id="floatingPassword" maxlength="70" placeholder="" name="Address" value="@Model.Address">
            </div>
            <br />
            <button type="submit" class="btn btn-primary mb-3 ali">Save</button>
            @if (ViewBag.Result == false)
            {
                <div class="alert alert-danger m-auto" role="alert">
                    Change Failed
                </div>
            }
        </form>
    </div>
</div>

@section CSS{
    <link href="~/admin/css/ad_login.css" rel="stylesheet" />
}
