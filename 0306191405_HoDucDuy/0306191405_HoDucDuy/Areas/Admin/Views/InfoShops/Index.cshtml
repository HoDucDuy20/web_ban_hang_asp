        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => infoShop.Twitter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => infoShop.Twitter)
        </dd>
        <dt class="col-sm-2">
