@{
}
@{
    ViewData["Title"] = "Login";
}
<div class="container justify-content-center">
    <div class="col align-self-center p">
        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="form-floating mb-3">
                <label for="floatingInput">Tài khoản</label>
                <input type="text" class="form-control" id="floatingInput" placeholder="" name="username">
            </div>
            <div class="form-floating mb-3">
                <label for="floatingPassword">Mật khẩu</label>
                <input type="password" class="form-control" id="floatingPassword" minlength="6" placeholder="" name="password">
            </div>
            @*<div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck1">
                            <label class="form-check-label" for="gridCheck1">
                                Example checkbox
                            </label>
                        </div>
                    </div>
                </div>*@
        <br />
            <button type="submit" class="btn btn-primary mb-3">Đăng nhập</button>
            @if (ViewBag.Result == false)
            {
                <div class="alert alert-danger mt-3" role="alert">Đăng nhập thất bại!</div>
            }
        </form>
    </div>
</div>

@section CSS{
    <link href="~/admin/css/ad_login.css" rel="stylesheet" />
}
